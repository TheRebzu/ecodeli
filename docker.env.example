# Configuration EcoDeli - Variables d'environnement Docker

# === DATABASE ===
DATABASE_URL="postgresql://postgres:password@postgres:5432/ecodeli"
POSTGRES_PASSWORD="your_secure_password_here"

# === AUTHENTIFICATION ===
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your_nextauth_secret_key_here"

# === STRIPE ===
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="whsec_your_stripe_webhook_secret"
STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"

# === ONESIGNAL ===
ONESIGNAL_APP_ID="your_onesignal_app_id"
ONESIGNAL_API_KEY="your_onesignal_api_key"

# === EMAIL ===
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your_email@gmail.com"
SMTP_PASSWORD="your_app_password"
SMTP_FROM="noreply@ecodeli.me"

# === ADMIN PGADMIN (dev only) ===
PGADMIN_EMAIL="admin@ecodeli.me"
PGADMIN_PASSWORD="admin123"

# === MONITORING (optional) ===
GRAFANA_PASSWORD="admin123"

# === PRODUCTION SETTINGS ===
NODE_ENV="production"
LOG_LEVEL="info"
DATA_PATH="./data"

# === URLS ===
FRONTEND_URL="http://localhost:3000"
API_URL="http://localhost:3000/api"

# === SECURITY ===
JWT_SECRET="your_jwt_secret_key_here"
ENCRYPTION_KEY="your_encryption_key_here"

# === UPLOADS ===
UPLOAD_MAX_SIZE="10485760"
UPLOAD_PATH="/app/uploads"

# === LOGGING ===
LOG_PATH="/app/logs"

# === BACKUP ===
BACKUP_PATH="/app/backups"

# === DOCKER SPECIFIC ===
COMPOSE_PROJECT_NAME="ecodeli" 