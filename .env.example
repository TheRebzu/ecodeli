# =============================================================================
# VARIABLES D'ENVIRONNEMENT ECODELI
# Copiez ce fichier vers .env et configurez les valeurs
# =============================================================================

# =============================================================================
# CONFIGURATION GÉNÉRALE
# =============================================================================
ENVIRONMENT=production
DOMAIN_NAME=ecodeli.local
CORS_ORIGIN=https://ecodeli.local

# =============================================================================
# BASE DE DONNÉES POSTGRESQL
# =============================================================================
POSTGRES_PASSWORD=SecurePassword123!
POSTGRES_SHARED_BUFFERS=1GB
POSTGRES_EFFECTIVE_CACHE_SIZE=3GB

# =============================================================================
# AUTHENTIFICATION ET SÉCURITÉ
# =============================================================================
NEXTAUTH_SECRET=your-super-secret-jwt-key-here-change-in-production
NEXTAUTH_URL=https://ecodeli.local
API_SECRET_KEY=your-api-secret-key-here-change-in-production

# Clés de chiffrement
ENCRYPTION_KEY=your-32-character-encryption-key-here
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key-here

# =============================================================================
# MONITORING ET ALERTING
# =============================================================================
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=SecureGrafanaPassword123!
GRAFANA_SECRET_KEY=your-grafana-secret-key-here

# =============================================================================
# BACKUP ET STOCKAGE
# =============================================================================
BACKUP_REMOTE_STORAGE=s3
BACKUP_S3_BUCKET=ecodeli-backups
BACKUP_S3_ACCESS_KEY=your-s3-access-key
BACKUP_S3_SECRET_KEY=your-s3-secret-key

# Stockage local (si pas de S3)
BACKUP_LOCAL_PATH=/opt/ecodeli/backups

# =============================================================================
# NOTIFICATIONS
# =============================================================================
NOTIFICATION_EMAIL=admin@ecodeli.local

# Configuration SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@ecodeli.local

# =============================================================================
# SSL/TLS
# =============================================================================
SSL_ENABLED=true
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# =============================================================================
# MONITORING EXTERNAL
# =============================================================================
# Slack pour alertes
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook

# PagerDuty pour alertes critiques
PAGERDUTY_SERVICE_KEY=your-pagerduty-service-key

# =============================================================================
# PERFORMANCE ET SCALING
# =============================================================================
# Limites de ressources
WEB_MEMORY_LIMIT=2G
WEB_CPU_LIMIT=2.0
DESKTOP_MEMORY_LIMIT=4G
DESKTOP_CPU_LIMIT=2.0
POSTGRES_MEMORY_LIMIT=4G
POSTGRES_CPU_LIMIT=2.0

# Configuration Redis
REDIS_MEMORY_LIMIT=1G
REDIS_MAXMEMORY_POLICY=allkeys-lru

# =============================================================================
# DÉVELOPPEMENT (uniquement pour docker-compose.dev.yml)
# =============================================================================
DEBUG=false
LOG_LEVEL=info
NODE_ENV=production

# =============================================================================
# INTÉGRATIONS EXTERNES
# =============================================================================
# API Keys pour services externes
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
STRIPE_PUBLIC_KEY=pk_live_your-stripe-public-key
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key

# OneSignal pour notifications push
ONESIGNAL_APP_ID=your-onesignal-app-id
ONESIGNAL_API_KEY=your-onesignal-api-key

# =============================================================================
# ANALYTICS ET TRACKING
# =============================================================================
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
MIXPANEL_TOKEN=your-mixpanel-token

# =============================================================================
# FEATURE FLAGS
# =============================================================================
FEATURE_MOBILE_APP=true
FEATURE_DESKTOP_APP=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_DATA_MINING=true
FEATURE_REAL_TIME_TRACKING=true

# =============================================================================
# MAINTENANCE ET SUPPORT
# =============================================================================
MAINTENANCE_MODE=false
SUPPORT_EMAIL=support@ecodeli.local
SUPPORT_PHONE=+33123456789

# =============================================================================
# COMPLIANCE ET LÉGAL
# =============================================================================
GDPR_ENABLED=true
DATA_RETENTION_DAYS=365
AUDIT_LOG_RETENTION_DAYS=2555  # 7 ans