<?xml version="1.0" encoding="utf-8"?>
<full-backup-content>
    <!-- Inclure les préférences partagées -->
    <include domain="sharedpref" path="."/>
    
    <!-- Exclure les données sensibles -->
    <exclude domain="sharedpref" path="device.xml"/>
    <exclude domain="sharedpref" path="session.xml"/>
    <exclude domain="sharedpref" path="auth_token.xml"/>
    
    <!-- Exclure les fichiers temporaires -->
    <exclude domain="file" path="temp/"/>
    <exclude domain="file" path="cache/"/>
    
    <!-- Exclure les données de base locale -->
    <exclude domain="database" path="session.db"/>
    <exclude domain="database" path="temp.db"/>
</full-backup-content>