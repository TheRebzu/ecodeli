<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Thème de base pour l'application -->
    <style name="Theme.EcoDeli" parent="Theme.Material3.DayNight">
        <!-- Couleurs primaires -->
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/primary_green_light</item>
        <item name="colorOnPrimaryContainer">@color/black</item>
        
        <!-- Couleurs secondaires -->
        <item name="colorSecondary">@color/secondary_blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/secondary_blue_light</item>
        <item name="colorOnSecondaryContainer">@color/black</item>
        
        <!-- Couleurs de surface -->
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnSurface">@color/text_primary_light</item>
        <item name="colorSurfaceVariant">@color/surface_light</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary_light</item>
        
        <!-- Couleurs de fond -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorOnBackground">@color/text_primary_light</item>
        
        <!-- Couleurs d'erreur -->
        <item name="colorError">@color/error_red</item>
        <item name="colorOnError">@color/white</item>
        
        <!-- Couleurs d'outline -->
        <item name="colorOutline">@color/outline_light</item>
        <item name="colorOutlineVariant">@color/outline_variant_light</item>
        
        <!-- Configuration de la status bar -->
        <item name="android:statusBarColor">@color/primary_green</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
    
    <!-- Thème pour le splash screen -->
    <style name="Theme.EcoDeli.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/primary_green</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_ecodeli_logo</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.EcoDeli</item>
    </style>
    
    <!-- Thème sans action bar -->
    <style name="Theme.EcoDeli.NoActionBar" parent="Theme.EcoDeli">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>