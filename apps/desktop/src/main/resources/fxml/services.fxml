<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox fx:id="servicesVBox" spacing="10.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ecodeli.desktop.controllers.ServicesController">
   <children>
      <!-- Header -->
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <Label styleClass="page-title" text="Services">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="refreshButton" mnemonicParsing="false" text="🔄 Actualiser" />
            <ProgressIndicator fx:id="loadingIndicator" maxHeight="20.0" maxWidth="20.0" visible="false" />
         </children>
      </HBox>
      
      <!-- Filters -->
      <VBox spacing="10.0" styleClass="filter-panel">
         <children>
            <Label text="Filtres et recherche">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <HBox spacing="10.0">
               <children>
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Recherche:" />
                        <TextField fx:id="searchField" prefWidth="200.0" promptText="Nom, prestataire, client..." />
                     </children>
                  </VBox>
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Statut:" />
                        <ComboBox fx:id="statusFilter" prefWidth="130.0" />
                     </children>
                  </VBox>
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Type:" />
                        <ComboBox fx:id="typeFilter" prefWidth="130.0" />
                     </children>
                  </VBox>
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Catégorie:" />
                        <ComboBox fx:id="categoryFilter" prefWidth="130.0" />
                     </children>
                  </VBox>
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Ville:" />
                        <ComboBox fx:id="cityFilter" prefWidth="110.0" />
                     </children>
                  </VBox>
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Options:" />
                        <CheckBox fx:id="completedOnlyCheckBox" mnemonicParsing="false" text="Terminés seulement" />
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
      
      <!-- Statistics -->
      <HBox spacing="20.0" styleClass="stats-panel">
         <children>
            <VBox alignment="CENTER" spacing="5.0">
               <children>
                  <Label text="Total services" />
                  <Label fx:id="totalServicesLabel" styleClass="stat-number" text="0">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
            <Separator orientation="VERTICAL" />
            <VBox alignment="CENTER" spacing="5.0">
               <children>
                  <Label text="Terminés" />
                  <Label fx:id="completedServicesLabel" styleClass="stat-number" text="0">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
            <Separator orientation="VERTICAL" />
            <VBox alignment="CENTER" spacing="5.0">
               <children>
                  <Label text="Revenus" />
                  <Label fx:id="totalRevenueLabel" styleClass="stat-number" text="0 €">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
            <Separator orientation="VERTICAL" />
            <VBox alignment="CENTER" spacing="5.0">
               <children>
                  <Label text="Note moyenne" />
                  <Label fx:id="avgRatingLabel" styleClass="stat-number" text="0.0 ⭐">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
      
      <!-- Table -->
      <TableView fx:id="servicesTable" VBox.vgrow="ALWAYS">
        <columns>
          <TableColumn fx:id="nameColumn" prefWidth="150.0" text="Service" />
          <TableColumn fx:id="typeColumn" prefWidth="100.0" text="Type" />
          <TableColumn fx:id="categoryColumn" prefWidth="100.0" text="Catégorie" />
          <TableColumn fx:id="providerColumn" prefWidth="120.0" text="Prestataire" />
          <TableColumn fx:id="clientColumn" prefWidth="120.0" text="Client" />
          <TableColumn fx:id="statusColumn" prefWidth="100.0" text="Statut" />
          <TableColumn fx:id="cityColumn" prefWidth="80.0" text="Ville" />
          <TableColumn fx:id="scheduledDateColumn" prefWidth="120.0" text="Date prévue" />
          <TableColumn fx:id="durationColumn" prefWidth="80.0" text="Durée" />
          <TableColumn fx:id="priceColumn" prefWidth="80.0" text="Prix" />
          <TableColumn fx:id="ratingColumn" prefWidth="70.0" text="Note" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </children>
   <padding>
      <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
   </padding>
</VBox>