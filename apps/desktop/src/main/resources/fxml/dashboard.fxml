<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox fx:id="dashboardVBox" spacing="10.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ecodeli.desktop.controllers.DashboardController">
   <children>
      <!-- Header -->
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <Label styleClass="page-title" text="Dashboard EcoDeli">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Label text="Vue d'ensemble de la plateforme" />
         </children>
      </HBox>
      
      <!-- Métriques principales -->
      <GridPane hgap="15.0" vgap="15.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <!-- Card 1: Total Merchants -->
            <VBox alignment="CENTER" styleClass="metric-card">
               <children>
                  <Label text="🏪 Commerçants" />
                  <Label fx:id="totalMerchantsLabel" styleClass="metric-number" text="0">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
            
            <!-- Card 2: Total Deliveries -->
            <VBox alignment="CENTER" styleClass="metric-card" GridPane.columnIndex="1">
               <children>
                  <Label text="🚚 Livraisons" />
                  <Label fx:id="totalDeliveriesLabel" styleClass="metric-number" text="0">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
            
            <!-- Card 3: Total Services -->
            <VBox alignment="CENTER" styleClass="metric-card" GridPane.columnIndex="2">
               <children>
                  <Label text="🔧 Services" />
                  <Label fx:id="totalServicesLabel" styleClass="metric-number" text="0">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
            
            <!-- Card 4: Total Revenue -->
            <VBox alignment="CENTER" styleClass="metric-card" GridPane.columnIndex="3">
               <children>
                  <Label text="💰 Revenus" />
                  <Label fx:id="totalRevenueLabel" styleClass="metric-number" text="0 €">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
            
            <!-- Card 5: Completed Deliveries -->
            <VBox alignment="CENTER" styleClass="metric-card" GridPane.rowIndex="1">
               <children>
                  <Label text="✅ Livraisons terminées" />
                  <Label fx:id="completedDeliveriesLabel" styleClass="metric-number" text="0">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
            
            <!-- Card 6: Completed Services -->
            <VBox alignment="CENTER" styleClass="metric-card" GridPane.columnIndex="1" GridPane.rowIndex="1">
               <children>
                  <Label text="✅ Services terminés" />
                  <Label fx:id="completedServicesLabel" styleClass="metric-number" text="0">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
            
            <!-- Card 7: Average Delivery Rating -->
            <VBox alignment="CENTER" styleClass="metric-card" GridPane.columnIndex="2" GridPane.rowIndex="1">
               <children>
                  <Label text="⭐ Note livraisons" />
                  <Label fx:id="avgDeliveryRatingLabel" styleClass="metric-number" text="0.0 ⭐">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
            
            <!-- Card 8: Average Service Rating -->
            <VBox alignment="CENTER" styleClass="metric-card" GridPane.columnIndex="3" GridPane.rowIndex="1">
               <children>
                  <Label text="⭐ Note services" />
                  <Label fx:id="avgServiceRatingLabel" styleClass="metric-number" text="0.0 ⭐">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
         </children>
      </GridPane>
      
      <!-- Graphiques -->
      <GridPane hgap="15.0" vgap="15.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <!-- Revenue Chart -->
            <LineChart fx:id="revenueChart" prefHeight="250.0" title="Évolution des revenus">
              <xAxis>
                <CategoryAxis side="BOTTOM" />
              </xAxis>
              <yAxis>
                <NumberAxis side="LEFT" />
              </yAxis>
            </LineChart>
            
            <!-- Deliveries Type Chart -->
            <PieChart fx:id="deliveriesTypeChart" prefHeight="250.0" title="Types de livraison" GridPane.columnIndex="1" />
            
            <!-- Services Chart -->
            <BarChart fx:id="servicesChart" prefHeight="250.0" title="Services par catégorie" GridPane.rowIndex="1">
              <xAxis>
                <CategoryAxis side="BOTTOM" />
              </xAxis>
              <yAxis>
                <NumberAxis side="LEFT" />
              </yAxis>
            </BarChart>
            
            <!-- Regions Chart -->
            <PieChart fx:id="regionsChart" prefHeight="250.0" title="Clients par région" GridPane.columnIndex="1" GridPane.rowIndex="1" />
         </children>
      </GridPane>
      
      <!-- Tableaux Top -->
      <GridPane hgap="15.0" vgap="10.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <!-- Top Merchants -->
            <VBox>
               <children>
                  <Label text="🏆 Top Commerçants">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>
                  <TableView fx:id="topMerchantsTable" prefHeight="200.0">
                    <columns>
                      <TableColumn fx:id="merchantNameColumn" prefWidth="150.0" text="Entreprise" />
                      <TableColumn fx:id="merchantRevenueColumn" prefWidth="100.0" text="Revenus" />
                      <TableColumn fx:id="merchantOrdersColumn" prefWidth="80.0" text="Commandes" />
                    </columns>
                  </TableView>
               </children>
            </VBox>
            
            <!-- Top Services -->
            <VBox GridPane.columnIndex="1">
               <children>
                  <Label text="🔧 Top Services">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>
                  <TableView fx:id="topServicesTable" prefHeight="200.0">
                    <columns>
                      <TableColumn fx:id="serviceNameColumn" prefWidth="150.0" text="Service" />
                      <TableColumn fx:id="serviceBookingsColumn" prefWidth="80.0" text="Réservations" />
                      <TableColumn fx:id="serviceRatingColumn" prefWidth="80.0" text="Note" />
                    </columns>
                  </TableView>
               </children>
            </VBox>
         </children>
      </GridPane>
   </children>
   <padding>
      <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
   </padding>
</VBox>