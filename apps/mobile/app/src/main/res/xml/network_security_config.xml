<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Configuration pour le domaine principal en production -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">api.ecodeli.com</domain>
        <pin-set expiration="2025-12-31">
            <!-- Empreintes SHA256 des certificats SSL - À REMPLACER par les vraies -->
            <pin digest="SHA256">AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA=</pin>
            <pin digest="SHA256">BBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBB=</pin>
        </pin-set>
    </domain-config>
    
    <!-- Configuration pour le développement local -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">192.168.1.0/24</domain>
    </domain-config>
    
    <!-- Configuration par défaut -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <!-- Faire confiance aux CA système -->
            <certificates src="system"/>
        </trust-anchors>
    </base-config>
</network-security-config>