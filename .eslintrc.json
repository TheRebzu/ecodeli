{
  "root": true,
  "extends": [
    "next/core-web-vitals",
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "rules": {
    // Désactiver complètement la règle des variables non utilisées
    "@typescript-eslint/no-unused-vars": "off",
    // Autoriser any temporairement durant la phase de build
    "@typescript-eslint/no-explicit-any": "off",
    // Règles pour les hooks React
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn",
    // Ne pas permettre les @ts-ignore sans explication
    "@typescript-eslint/ban-ts-comment": [
      "warn",
      {
        "ts-ignore": "allow-with-description",
        "minimumDescriptionLength": 10
      }
    ],
    // Règles pour les types objets vides
    "@typescript-eslint/no-empty-object-type": "warn",
    // Optimisation des images Next.js
    "@next/next/no-img-element": "warn",
    // Désactiver temporairement les règles d'entités non échappées
    "react/no-unescaped-entities": "off",
    // Désactiver temporairement les règles de déclarations lexicales dans les blocs case
    "no-case-declarations": "off",
    // Temporairement désactiver prefer-const pour éviter les erreurs de build
    "prefer-const": "warn",
    // Temporairement désactiver no-useless-escape pour les regex
    "no-useless-escape": "warn",
    // Désactiver temporairement les règles d'imports
    "@typescript-eslint/no-require-imports": "warn",
    // Désactiver les règles d'exports anonymes
    "import/no-anonymous-default-export": "warn"
  }
}
