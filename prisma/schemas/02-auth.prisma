model Session {
  id                String              @id @default(cuid())
  userId            String
  token             String              @unique
  userAgent         String?
  ip                String?
  expiresAt         DateTime
  createdAt         DateTime            @default(now())
  
  user              User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([token])
  @@index([userId])
}

model PasswordReset {
  id                String              @id @default(cuid())
  email             String
  token             String              @unique
  expiresAt         DateTime
  createdAt         DateTime            @default(now())
  
  @@index([token])
  @@index([email])
}
