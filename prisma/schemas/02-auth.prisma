model PasswordReset {
  id                String              @id @default(cuid())
  email             String
  token             String              @unique
  expiresAt         DateTime
  used              Boolean             @default(false)
  createdAt         DateTime            @default(now())
  
  @@index([token])
  @@index([email])
  @@index([expiresAt])
}

model VerificationToken {
  id                String              @id @default(cuid())
  identifier        String              // email ou autre identifiant
  token             String              @unique
  expires           DateTime
  type              String              // 'email_verification', 'password_reset', etc.
  createdAt         DateTime            @default(now())
  
  @@index([token])
  @@index([identifier])
  @@index([expires])
  @@index([type])
}
